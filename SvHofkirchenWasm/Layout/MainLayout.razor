@inherits LayoutComponentBase
@using SvHofkirchenWasm.Services
@inject AuthService AuthService
@inject NavigationManager Navigation

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            <h1 class="header-title">SV Hofkirchen - Sektion Schach</h1>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <footer class="footer mt-auto">
            <div class="container-fluid py-3">
                <div class="row align-items-center">
                    <div class="col-md-6 text-center text-md-start mb-2 mb-md-0">
                        <span class="text-muted fw-bold small">&copy; @DateTime.Now.Year SV Hofkirchen</span>
                    </div>
                    <div class="col-md-6 text-center text-md-end">
                        <a href="impressum"
                            class="text-decoration-none text-muted small me-2 hover-primary">Impressum</a>
                        <span class="text-muted small mx-2">|</span>
                        <a href="datenschutz"
                            class="text-decoration-none text-muted small hover-primary">Datenschutz</a>

                        @if (AuthService.IsAuthenticated)
                        {
                            <span class="text-muted small mx-2">|</span>
                            <span class="text-muted small me-2">
                                <strong>@AuthService.CurrentUser?.UserName</strong>
                            </span>
                            <span class="text-muted small mx-2">|</span>
                            <button class="btn btn-link text-muted text-decoration-none small p-0" @onclick="HandleLogout"
                                style="height: auto; line-height: normal;">
                                Abmelden
                            </button>
                        }
                        else
                        {
                            <span class="text-muted small mx-2">|</span>
                            <a href="login" class="text-decoration-none text-muted small hover-primary">Anmelden</a>
                        }
                    </div>
                </div>
            </div>
        </footer>
    </main>
</div>

@code {
    private async Task HandleLogout()
    {
        await AuthService.LogoutAsync();
        Navigation.NavigateTo("https://watzingerm21052.github.io/SvHofkirchenHomepage-Web/", forceLoad: true);
    }

    protected override void OnInitialized()
    {
        AuthService.OnAuthStateChanged += StateHasChanged;
    }
}