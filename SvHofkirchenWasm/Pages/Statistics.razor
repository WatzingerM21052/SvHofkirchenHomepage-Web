@page "/statistics"
@inject YouthService Service
@inject IJSRuntime JS

<div class="container-fluid pb-5">
    <h3 class="mb-4 fw-bold text-primary"><i class="bi bi-bar-chart-fill"></i> Statistik Dashboard</h3>

    @if (Service.IsInitialized)
    {
        <div class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white h-100 shadow rounded-4 border-0">
                    <div class="card-body text-center p-4">
                        <h1 class="display-3 fw-bold mb-0">@Service.YouthMembers.Count</h1>
                        <p class="fs-5 opacity-75">Aktive Jugendliche</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-dark text-white h-100 shadow rounded-4 border-0">
                    <div class="card-body text-center p-4">
                        <h1 class="display-3 fw-bold mb-0">@Service.Presences.Count</h1>
                        <p class="fs-5 opacity-75">Erfasste Anwesenheiten</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white h-100 shadow rounded-4 border-0">
                    <div class="card-body text-center p-4">
                        <h1 class="display-3 fw-bold mb-0">@CalculateAverageAttendance()</h1>
                        <p class="fs-5 opacity-75">Ø Teilnehmer / Training</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-white fw-bold py-3 border-bottom-0">
                        Altersklassen Verteilung
                    </div>
                    <div class="card-body d-flex align-items-center justify-content-center">
                        <div style="width: 100%; max-width: 300px;">
                            <canvas id="ageChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-white fw-bold py-3 border-bottom-0">
                        Teilnahmeverlauf (Letzte 12 Monate)
                    </div>
                    <div class="card-body">
                        <canvas id="monthChart" style="max-height: 300px;"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-6">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-white fw-bold py-3">
                        <i class="bi bi-trophy-fill text-warning me-2"></i> Trainingsfleißigste
                    </div>
                    <ul class="list-group list-group-flush">
                        @foreach (var stat in GetTopAttendees())
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                <div class="d-flex align-items-center">
                                    <div class="fw-bold me-2">@stat.Name</div>
                                    <span class="badge rounded-pill bg-light text-dark border">@stat.Category</span>
                                </div>
                                <span class="badge bg-primary rounded-pill fs-6">@stat.Count x</span>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-white fw-bold py-3">
                        Letzte 5 Trainings
                    </div>
                    <div class="card-body">
                         @foreach(var day in GetLastTrainings())
                         {
                             <div class="mb-4">
                                 <div class="d-flex justify-content-between mb-1">
                                     <span class="fw-bold text-dark">@day.Date.ToString("dd.MM.yyyy")</span>
                                     <span class="text-muted small">@day.Count Teilnehmer</span>
                                 </div>
                                 <div class="progress" style="height: 12px; border-radius: 6px;">
                                     <div class="progress-bar bg-success" role="progressbar" style="width: @(day.Percentage)%"></div>
                                 </div>
                             </div>
                         }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <p>Lade Statistiken...</p>
    }
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        await Service.InitializeAsync();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (Service.IsInitialized)
        {
            // Kurze Verzögerung, damit DOM sicher da ist
            await Task.Delay(100); 
            await RenderCharts();
        }
    }

    private async Task RenderCharts()
    {
        // 1. Altersverteilung
        var categories = Service.YouthMembers
            .GroupBy(m => m.AgeCategory)
            .OrderBy(g => g.Key)
            .ToList();

        var ageConfig = new
        {
            type = "doughnut",
            data = new
            {
                labels = categories.Select(g => g.Key).ToArray(),
                datasets = new[] {
                    new {
                        data = categories.Select(g => g.Count()).ToArray(),
                        backgroundColor = new[] { "#198754", "#0dcaf0", "#0d6efd", "#ffc107", "#dc3545", "#212529" }
                    }
                }
            },
            options = new { 
                plugins = new { 
                    legend = new { position = "bottom" } 
                },
                maintainAspectRatio = false
            }
        };

        // 2. Verlauf pro Monat
        var months = Service.Presences
            .Where(p => p.ParsedDate > DateTime.Today.AddMonths(-12))
            .GroupBy(p => new { p.ParsedDate.Year, p.ParsedDate.Month })
            .OrderBy(g => g.Key.Year).ThenBy(g => g.Key.Month)
            .ToList();

        var monthConfig = new 
        {
            type = "bar",
            data = new 
            {
                labels = months.Select(g => $"{g.Key.Month}/{g.Key.Year}").ToArray(),
                datasets = new[] {
                    new {
                        label = "Teilnehmer",
                        data = months.Select(g => g.Count()).ToArray(),
                        backgroundColor = "#0d6efd",
                        borderRadius = 5
                    }
                }
            },
            options = new { 
                responsive = true,
                scales = new { y = new { beginAtZero = true } } 
            }
        };

        await JS.InvokeVoidAsync("setupChart", "ageChart", ageConfig);
        await JS.InvokeVoidAsync("setupChart", "monthChart", monthConfig);
    }

    private double CalculateAverageAttendance()
    {
        var distinctDates = Service.Presences.Select(p => p.ParsedDate.Date).Distinct().Count();
        if (distinctDates == 0) return 0;
        return Math.Round((double)Service.Presences.Count / distinctDates, 1);
    }

    private IEnumerable<(string Name, int Count, string Category)> GetTopAttendees()
    {
        return Service.Presences
            .GroupBy(p => p.MemberId)
            .Select(g => new { 
                Member = Service.YouthMembers.FirstOrDefault(m => m.MemberId == g.Key), 
                Count = g.Count() 
            })
            .Where(x => x.Member != null)
            .Select(x => (x.Member!.FullName, x.Count, x.Member.AgeCategory))
            .OrderByDescending(x => x.Count)
            .Take(10);
    }

    private IEnumerable<(DateTime Date, int Count, double Percentage)> GetLastTrainings()
    {
        var totalMembers = Math.Max(1, Service.YouthMembers.Count);
        return Service.Presences
            .GroupBy(p => p.ParsedDate.Date)
            .OrderByDescending(g => g.Key)
            .Take(5)
            .Select(g => (g.Key, g.Count(), (double)g.Count() / totalMembers * 100));
    }
}