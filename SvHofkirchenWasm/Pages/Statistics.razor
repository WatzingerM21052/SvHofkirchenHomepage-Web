@page "/statistics"
@using SvHofkirchenWasm.Models
@using SvHofkirchenWasm.Services
@using System.Globalization
@inject YouthService Service
@inject IJSRuntime JS
@inject AuthService AuthService
@inject NavigationManager Navigation

@if (!AuthService.IsAuthenticated)
{
    Navigation.NavigateTo("login");
    return;
}

@if (AuthService.CurrentRole == "Besucher")
{
    <div class="alert alert-danger" role="alert">
        <strong>Zugriff verweigert!</strong> Diese Seite ist nicht fÃ¼r Besucher zugÃ¤nglich.
    </div>
    return;
}

<div class="container-fluid pb-5 p-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold text-primary mb-0">Statistiken</h2>
            <p class="text-muted small mb-0">Datenanalyse & Trainingstrends</p>
        </div>
        
        <div class="d-flex gap-2 align-items-center">
            <div class="dropdown position-relative">
                <button class="btn btn-white bg-white border rounded-pill shadow-sm fw-bold px-4 d-flex align-items-center" 
                        @onclick="ToggleSeasonDropdown">
                    <i class="bi bi-calendar-range me-2 text-primary"></i> Saison @SelectedSeason
                    <i class="bi bi-chevron-down ms-2 small text-muted"></i>
                </button>
                
                @if (isSeasonDropdownOpen)
                {
                    <div class="position-fixed top-0 start-0 w-100 h-100" style="z-index: 1000;" @onclick="ToggleSeasonDropdown"></div>
                    <ul class="dropdown-menu show border-0 shadow-lg rounded-3 mt-2 p-2 animate-slide-in" 
                        style="z-index: 1001; right: 0; left: auto; display: block;">
                        @foreach(var s in AvailableSeasons)
                        {
                            <li>
                                <button class="dropdown-item fw-bold rounded-2 mb-1 @(s==SelectedSeason?"active":"")" 
                                        @onclick="() => ChangeSeason(s)">
                                    Saison @s
                                </button>
                            </li>
                        }
                    </ul>
                }
            </div>

            @if (Service.IsInitialized)
            {
                <button class="btn btn-primary rounded-circle shadow-sm" style="width: 40px; height: 40px;" @onclick="ExportPdf" title="Als PDF speichern">
                    <i class="bi bi-file-earmark-pdf-fill"></i>
                </button>
            }
        </div>
    </div>

    @if (!Service.IsInitialized)
    {
         <div class="d-flex justify-content-center py-5">
             <div class="spinner-border text-primary"></div>
         </div>
    }
    else
    {
        <div class="row g-4 mb-4">
            <div class="col-lg-4 col-md-6">
                <div class="glass-card p-4 h-100 position-relative">
                    <h6 class="text-uppercase text-muted fw-bold small mb-4">Altersstruktur (Jugend)</h6>
                    <div style="height: 220px; position: relative;">
                        <canvas id="ageChart"></canvas>
                    </div>
                    <div class="mt-4 d-flex justify-content-center gap-3">
                         <div class="text-center">
                              <h4 class="mb-0 fw-bold">@Service.YouthMembers.Count</h4>
                              <small class="text-muted">Jugend</small>
                         </div>
                         <div class="vr"></div>
                         <div class="text-center">
                             <h4 class="mb-0 fw-bold">@GetActiveMembersCount()</h4>
                             <small class="text-muted">Aktiv (letzte 3 Mon.)</small>
                         </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 col-md-6">
                <div class="glass-card p-4 h-100">
                    <h6 class="text-uppercase text-muted fw-bold small mb-4">Trainingstrend (@SelectedSeason)</h6>
                    <div style="height: 220px; position: relative;">
                        <canvas id="monthChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="glass-card h-100 border-0 overflow-hidden">
                    <div class="p-3 border-bottom bg-white d-flex align-items-center justify-content-between">
                        <h6 class="fw-bold text-primary mb-0"><i class="bi bi-trophy-fill me-2"></i>Top TrainingsfleiÃŸ</h6>
                        <span class="badge bg-light text-dark border">@SelectedSeason</span>
                    </div>
                    
                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light sticky-top" style="z-index: 5;">
                                <tr>
                                    <th class="ps-4 text-center">Rang</th>
                                    <th>Name</th>
                                    <th>Kat.</th>
                                    <th class="text-center">Trainings</th>
                                    <th class="text-end pe-4">Quote</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ 
                                    var statsList = GetFullAttendanceList().ToList();
                                    int denseRank = 0;
                                    int lastCount = -1;
                                }
                                @foreach (var stat in statsList)
                                {
                                    if (stat.Count != lastCount)
                                    {
                                        denseRank++;
                                        lastCount = stat.Count;
                                    }
                                    
                                    <tr>
                                        <td class="ps-4 fw-bold text-center" style="width:80px;">
                                            @if(denseRank == 1) { <span class="fs-4">ðŸ¥‡</span> }
                                            else if(denseRank == 2) { <span class="fs-4">ðŸ¥ˆ</span> }
                                            else if(denseRank == 3) { <span class="fs-4">ðŸ¥‰</span> }
                                            else { <span class="text-muted bg-light rounded px-2 py-1 border small">@denseRank.</span> }
                                        </td>
                                        <td>
                                            <div class="fw-bold text-dark">@stat.Name</div>
                                        </td>
                                        <td><span class="badge rounded-pill @stat.Color border border-white">@stat.Category</span></td>
                                        <td class="text-center">
                                            <span class="fw-bold text-primary fs-5">@stat.Count</span>
                                        </td>
                                        <td class="text-end pe-4">
                                            <div class="d-flex align-items-center justify-content-end gap-2">
                                                <div class="progress flex-grow-1" style="height: 6px; width: 80px; border-radius: 10px; background-color: #e9ecef;">
                                                    <div class="progress-bar" role="progressbar" 
                                                         style="width: @(stat.Percentage.ToString("0.0", CultureInfo.InvariantCulture))%; background-color: var(--primary);"></div>
                                                </div>
                                                <small class="fw-bold text-muted w-25 text-end">@(Math.Round(stat.Percentage))%</small>
                                            </div>
                                        </td>
                                    </tr>
                                }
                                @if(!statsList.Any())
                                {
                                    <tr><td colspan="5" class="text-center py-4 text-muted">Keine Trainingsdaten in dieser Saison.</td></tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <h6 class="text-uppercase text-muted fw-bold small mb-3 ps-1">Letzte Einheiten</h6>
                <div class="d-flex flex-column gap-3">
                     @foreach(var day in GetLastTrainings())
                     {
                         <div class="glass-card p-3 d-flex align-items-center transition-hover">
                             <div class="me-3 text-center rounded-3 bg-light border d-flex flex-column justify-content-center" style="width: 50px; height: 50px;">
                                 <span class="d-block small text-uppercase fw-bold text-muted lh-1" style="font-size: 0.6rem;">@day.Date.ToString("MMM")</span>
                                 <span class="d-block fs-5 fw-bold text-primary lh-1">@day.Date.Day</span>
                             </div>
                             <div class="flex-grow-1 ps-2">
                                 <h6 class="fw-bold mb-0 text-dark">Training</h6>
                                 <small class="text-muted">@day.Date.ToString("dddd, d. MMMM")</small>
                             </div>
                             <div class="text-end">
                                 <span class="badge bg-primary bg-gradient rounded-pill">@day.Count</span>
                             </div>
                         </div>
                     }
                </div>
            </div>
        </div>
    }
</div>

