@page "/attendance"
@inject YouthService Service
@using SvHofkirchenWasm.Models

<div class="container-fluid p-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold text-primary mb-0">Anwesenheit</h2>
            <p class="text-muted small mb-0">Trainingseinheit erfassen</p>
        </div>
        <div class="glass-card px-3 py-2 d-flex align-items-center gap-3">
            <span class="text-muted fw-bold small text-uppercase">Datum:</span>
            <input type="date" class="form-control border-0 bg-transparent fw-bold text-primary p-0" 
                   style="width: 140px;"
                   value="@CurrentDate.ToString("yyyy-MM-dd")" 
                   @onchange="OnDateChanged" />
        </div>
    </div>

    @if (!Service.IsInitialized)
    {
        <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
    }
    else
    {
        <div class="row g-3 mb-4">
            <div class="col-6 col-md-3">
                <div class="glass-card p-3 text-center border-bottom border-4 border-primary">
                    <span class="d-block text-muted small text-uppercase fw-bold">Anwesend</span>
                    <span class="fs-2 fw-bold text-primary">
                        @Service.Presences.Count(p => p.ParsedDate.Date == CurrentDate.Date)
                    </span>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="glass-card p-3 text-center">
                    <span class="d-block text-muted small text-uppercase fw-bold">Abwesend</span>
                    <span class="fs-2 fw-bold text-muted opacity-50">
                        @(Service.YouthMembers.Count - Service.Presences.Count(p => p.ParsedDate.Date == CurrentDate.Date))
                    </span>
                </div>
            </div>
        </div>

        <div class="glass-card overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted">
                        <tr>
                            <th class="ps-4" style="width: 60px;">Status</th>
                            <th>Name</th>
                            <th class="d-none d-md-table-cell">Geburtsjahr</th>
                            <th>Kategorie</th>
                            <th class="text-end pe-4">Alter</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Service.YouthMembers.OrderBy(m => m.LastName).ThenBy(m => m.FirstName))
                        {
                            var isPresent = Service.IsPresent(member.MemberId, CurrentDate);
                            
                            <tr @onclick="() => Toggle(member.MemberId)" 
                                class="@(isPresent ? "bg-primary bg-opacity-10" : "")" 
                                style="cursor: pointer; transition: background 0.1s;">
                                
                                <td class="ps-4">
                                    <div class="form-check">
                                        <input class="form-check-input fs-5 bg-white" type="checkbox" checked="@isPresent" style="pointer-events: none;">
                                    </div>
                                </td>
                                
                                <td>
                                    <span class="fw-bold @(isPresent ? "text-primary" : "text-dark")">
                                        @member.LastName
                                    </span> 
                                    @member.FirstName
                                </td>
                                
                                <td class="d-none d-md-table-cell text-muted font-monospace">
                                    @(member.BirthDate?.Year.ToString() ?? "-")
                                </td>
                                
                                <td>
                                    <span class="badge rounded-pill @member.CategoryColor shadow-sm border border-white">
                                        @member.AgeCategory
                                    </span>
                                </td>
                                
                                <td class="text-end pe-4">
                                    <span class="text-muted fw-bold small">@member.Age</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private DateTime CurrentDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        await Service.InitializeAsync();
    }

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            CurrentDate = date;
        }
    }

    private async Task Toggle(int memberId)
    {
        await Service.TogglePresenceAsync(memberId, CurrentDate);
    }
}