@page "/attendance"
@inject YouthService Service
@using SvHofkirchenWasm.Models

<div class="container-fluid p-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-5 gap-3">
        <div>
            <h2 class="fw-bold text-primary mb-1">Anwesenheit erfassen</h2>
            <p class="text-muted small mb-0">Wer ist heute im Training?</p>
        </div>
        
        <div class="d-flex align-items-center bg-white p-2 rounded-4 shadow-sm border">
            <span class="text-muted text-uppercase fw-bold small px-3">Datum:</span>
            <input type="date" class="date-picker-fancy" 
                   value="@CurrentDate.ToString("yyyy-MM-dd")" 
                   @onchange="OnDateChanged" />
        </div>
    </div>

    @if (!Service.IsInitialized)
    {
        <div class="text-center py-5"><div class="spinner-border text-primary"></div></div>
    }
    else
    {
        <div class="row g-3 mb-4">
            <div class="col-12">
                <div class="glass-card p-3 d-flex align-items-center justify-content-between bg-primary text-white" 
                     style="background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);">
                    <div class="d-flex align-items-center gap-3">
                        <div class="bg-white bg-opacity-25 p-2 rounded-circle">
                            <i class="bi bi-check-lg fs-4"></i>
                        </div>
                        <div>
                            <span class="d-block small text-white-50 fw-bold text-uppercase">Aktuell Anwesend</span>
                            <span class="fs-3 fw-bold">@Service.Presences.Count(p => p.ParsedDate.Date == CurrentDate.Date)</span>
                        </div>
                    </div>
                    <div class="text-end">
                         <span class="d-block small text-white-50">von @Service.YouthMembers.Count</span>
                         <span class="badge bg-warning text-dark mt-1">
                             @Math.Round((double)Service.Presences.Count(p => p.ParsedDate.Date == CurrentDate.Date) / Math.Max(1, Service.YouthMembers.Count) * 100)% Quote
                         </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="glass-card overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light text-muted">
                        <tr>
                            <th class="ps-4" style="width: 60px;"></th>
                            <th>Name</th>
                            <th class="d-none d-md-table-cell">Jahrgang</th>
                            <th>Kategorie</th>
                            <th class="text-end pe-4">Alter</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in Service.YouthMembers.OrderBy(m => m.LastName).ThenBy(m => m.FirstName))
                        {
                            var isPresent = Service.IsPresent(member.MemberId, CurrentDate);
                            
                            <tr @onclick="() => Toggle(member.MemberId)" 
                                class="@(isPresent ? "bg-success bg-opacity-10" : "")" 
                                style="cursor: pointer; transition: background 0.1s;">
                                
                                <td class="ps-4">
                                    <div class="form-check">
                                        <input class="form-check-input fs-5" type="checkbox" checked="@isPresent" style="pointer-events: none; border-color: #adb5bd;">
                                    </div>
                                </td>
                                
                                <td>
                                    <span class="fw-bold @(isPresent ? "text-success" : "text-dark")">
                                        @member.LastName
                                    </span> 
                                    @member.FirstName
                                </td>
                                
                                <td class="d-none d-md-table-cell text-muted font-monospace">
                                    @(member.BirthDate?.Year.ToString() ?? "-")
                                </td>
                                
                                <td>
                                    <span class="badge rounded-pill @member.CategoryColor shadow-sm border border-white">
                                        @member.AgeCategory
                                    </span>
                                </td>
                                
                                <td class="text-end pe-4">
                                    <span class="text-muted fw-bold small">@member.Age</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@code {
    private DateTime CurrentDate = DateTime.Today;

    protected override async Task OnInitializedAsync()
    {
        Service.OnChange += StateHasChanged; // Sicherstellen, dass wir Updates bekommen
        await Service.InitializeAsync();
    }
    
    public void Dispose() => Service.OnChange -= StateHasChanged;

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            CurrentDate = date;
        }
    }

    private async Task Toggle(int memberId)
    {
        await Service.TogglePresenceAsync(memberId, CurrentDate);
    }
}