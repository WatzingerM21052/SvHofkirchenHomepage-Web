@page "/"
@using SvHofkirchenWasm.Services
@inject YouthService Service
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>SV Hofkirchen - Schach Jugend</PageTitle>

@if (!AuthService.IsAuthenticated)
{
    @RenderGuestView()
    return;
}

@if (!Service.IsInitialized)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="text-center">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3 text-muted">Lade Vereinsdaten...</p>
        </div>
    </div>
}
else
{
    <div class="container-fluid p-4">
        <div class="glass-card p-5 mb-4 position-relative overflow-hidden bg-primary bg-gradient text-white border-0 shadow-lg">
            <div class="position-relative" style="z-index: 2;">
                <span class="badge bg-white text-primary mb-2 shadow-sm fw-bold">Saison @(DateTime.Now.Month > 8 ? DateTime.Now.Year : DateTime.Now.Year-1)/@(DateTime.Now.Month > 8 ? DateTime.Now.Year+1 : DateTime.Now.Year)</span>
                <h1 class="display-5 fw-bold mb-2">Hallo, @AuthService.CurrentUser?.UserName!</h1>
                <p class="lead opacity-75 mb-4" style="max-width: 600px;">
                    Willkommen im Bereich für @AuthService.CurrentRole. Hier ist der aktuelle Status.
                </p>
                
                <div class="d-flex gap-3 flex-wrap">
                    @if (AuthService.CurrentRole == "Admin" || AuthService.CurrentRole == "Trainer")
                    {
                        <a href="attendance" class="btn btn-warning fw-bold px-4 rounded-pill shadow-sm text-dark">
                            <i class="bi bi-calendar-check-fill me-2"></i>Anwesenheit
                        </a>
                    }
                    <a href="statistics" class="btn btn-outline-light px-4 rounded-pill fw-bold backdrop-blur">
                        <i class="bi bi-graph-up me-2"></i>Statistik
                    </a>
                </div>
            </div>
            <i class="bi bi-trophy-fill position-absolute text-white"
                style="font-size: 20rem; opacity: 0.08; right: -4rem; bottom: -5rem; transform: rotate(-15deg);"></i>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="glass-card p-4 h-100 position-relative overflow-hidden">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-uppercase text-muted fw-bold small mb-1">Aktive Jugendliche</p>
                            <h2 class="display-5 fw-bold text-primary mb-0">@Service.YouthMembers.Count</h2>
                        </div>
                        <div class="icon-circle bg-primary bg-opacity-10 text-primary">
                            <i class="bi bi-people-fill fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3 d-flex flex-wrap gap-1">
                        @{
                            var categories = Service.YouthMembers
                            .GroupBy(m => m.AgeCategory)
                            .OrderBy(g => g.Key.Length).ThenBy(g => g.Key);
                        }
                        @foreach (var cat in categories)
                        {
                            <span class="badge bg-light text-dark border small">@cat.Key: @cat.Count()</span>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="glass-card p-4 h-100 position-relative overflow-hidden">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-uppercase text-muted fw-bold small mb-1">Nächstes Training</p>
                            <h2 class="display-6 fw-bold text-dark mb-0">@GetNextTrainingDate()</h2>
                        </div>
                        <div class="icon-circle bg-warning bg-opacity-10 text-warning text-dark">
                            <i class="bi bi-clock-fill fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3 text-muted small">
                        <i class="bi bi-geo-alt-fill me-1 text-danger"></i> Hofkirchen (Stüberl LMS)
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="glass-card p-4 h-100 position-relative overflow-hidden">
                    <div class="d-flex justify-content-between">
                        <div>
                            <p class="text-uppercase text-muted fw-bold small mb-1">Beteiligung Ø</p>
                            <h2 class="display-5 fw-bold text-success mb-0">@CalculateAverageAttendance()</h2>
                        </div>
                        <div class="icon-circle bg-success bg-opacity-10 text-success">
                            <i class="bi bi-bar-chart-fill fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        @{
                            double avg = CalculateAverageAttendance();
                            double total = Service.YouthMembers.Count > 0 ? Service.YouthMembers.Count : 1;
                            double percentage = Math.Min(100, (avg / total) * 100);
                        }
                        <div class="d-flex justify-content-between small mb-1">
                            <span class="text-muted">Quote</span>
                            <span class="fw-bold text-success">@Math.Round(percentage, 0)%</span>
                        </div>
                        <div class="progress" style="height: 6px; border-radius: 10px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @((int)percentage)%">
                            </div>
                        </div>
                    </div>
                </div>
