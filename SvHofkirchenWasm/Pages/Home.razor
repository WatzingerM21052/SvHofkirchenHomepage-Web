@page "/"
@inject YouthService Service

<PageTitle>Dashboard - SV Hofkirchen</PageTitle>

@if (!Service.IsInitialized)
{
    <div class="d-flex justify-content-center align-items-center" style="height: 60vh;">
        <div class="spinner-border text-primary" role="status"></div>
    </div>
}
else
{
    <div class="container-fluid p-4">
        <div class="dashboard-hero p-5 mb-5 shadow-lg">
            <div class="row align-items-center position-relative" style="z-index: 2;">
                <div class="col-lg-8">
                    <span class="badge bg-warning text-dark mb-2">Saison 2025/26</span>
                    <h1 class="display-4 fw-bold mb-3">Sektion Schach Jugend</h1>
                    <p class="lead mb-4 opacity-75">
                        Willkommen im Verwaltungsportal. Hier organisierst du Training, Anwesenheit und Stammdaten der Jugendspieler.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="attendance" class="btn btn-warning fw-bold px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-play-fill me-1"></i> Training starten
                        </a>
                        <a href="youth-list" class="btn btn-outline-light px-4 py-2 rounded-pill">
                            Spieler verwalten
                        </a>
                    </div>
                </div>
            </div>
            <i class="bi bi-person-workspace position-absolute text-white" 
               style="font-size: 20rem; opacity: 0.03; right: -5rem; top: -5rem; transform: rotate(-10deg);"></i>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="glass-card p-4 h-100 position-relative overflow-hidden">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted fw-bold small mb-1">Spieler Gesamt</p>
                            <h2 class="display-5 fw-bold text-primary mb-0">@Service.YouthMembers.Count</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                            <i class="bi bi-people-fill fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-success small fw-bold"><i class="bi bi-arrow-up"></i> Aktiv</span>
                        <span class="text-muted small ms-2">im System</span>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="glass-card p-4 h-100 position-relative overflow-hidden">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted fw-bold small mb-1">Trainings (Total)</p>
                            <h2 class="display-5 fw-bold text-success mb-0">@Service.Presences.Select(p => p.ParsedDate.Date).Distinct().Count()</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                            <i class="bi bi-calendar-check-fill fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">Erfasste Einheiten</span>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="glass-card p-4 h-100 position-relative overflow-hidden">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <p class="text-uppercase text-muted fw-bold small mb-1">Altersdurchschnitt</p>
                            <h2 class="display-5 fw-bold text-info mb-0">
                                @(Service.YouthMembers.Any() ? Math.Round(Service.YouthMembers.Average(m => m.Age), 1) : 0)
                            </h2>
                        </div>
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle text-info">
                            <i class="bi bi-cake2-fill fs-3"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <span class="text-muted small">Jahre Ø</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
}