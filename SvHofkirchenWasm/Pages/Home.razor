                <div class="glass-card p-4 h-100">
                    <h6 class="text-uppercase text-muted fw-bold small mb-3">Geburtstage (nächste 30 Tage)</h6>
                    @{
                        var birthdays = GetUpcomingBirthdays();
                    }
                    @if (birthdays.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var b in birthdays)
                            {
                                <div class="list-group-item border-0 d-flex align-items-center px-0 py-2">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3 border"
                                        style="width: 45px; height: 45px;">
                                        <i class="bi bi-cake2-fill text-danger"></i>
                                    </div>
                                    <div class="flex-grow-1">
                                        <div class="fw-bold text-dark">@b.Member.FirstName @b.Member.LastName</div>
                                        <small class="text-muted">wird @(b.Age) Jahre alt</small>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-light text-dark border">@b.Date.ToString("dd.MM.")</span>
                                        @if (b.Date.Date == DateTime.Today)
                                        {
                                            <span class="badge bg-danger ms-1">Heute!</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-light border text-muted mb-0">
                            <i class="bi bi-calendar-x me-2"></i>Keine Geburtstage in den nächsten 30 Tagen.
                        </div>
                    }
                </div>
            </div>

            @if (AuthService.CurrentRole == "Admin" || AuthService.CurrentRole == "Trainer")
            {
                <div class="col-lg-4">
                    <div class="glass-card p-0 h-100 overflow-hidden bg-white">
                        <div class="p-4 bg-light border-bottom">
                            <h6 class="text-uppercase text-muted fw-bold small mb-0">Shortcuts</h6>
                        </div>
                        <div class="list-group list-group-flush">

