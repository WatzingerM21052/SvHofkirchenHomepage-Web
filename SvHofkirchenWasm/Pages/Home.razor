                    <div class="glass-card p-4 h-100">
                        <h6 class="text-uppercase text-muted fw-bold small mb-3">Schnelleinstiege</h6>
                        <div class="d-flex flex-column gap-2">
                            <button type="button" @onclick="OpenProfilePopup"
                                class="list-group-item list-group-item-action p-3 border-bottom-0 d-flex align-items-center border-0">
                                <i class="bi bi-person-circle fs-4 me-3 text-primary"></i>
                                <div>
                                    <div class="fw-bold">Mein Profil</div>
                                    <small class="text-muted">Mein Profil ansehen</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

