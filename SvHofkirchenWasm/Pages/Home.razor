    @if (showProfilePopup)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);" @onclick="CloseProfilePopup">
            <div class="modal-dialog modal-dialog-centered" @onclick:stopPropagation>
                <div class="modal-content shadow-lg border-0">
                    <div class="modal-header bg-primary text-white border-0">
                        <h5 class="modal-title">
                            <i class="bi bi-person-circle me-2"></i>Mein Profil
                        </h5>
                        <button type="button" class="btn-close btn-close-white" @onclick="CloseProfilePopup"></button>
                    </div>
                    <div class="modal-body p-4">
                        @if (AuthService.CurrentUser != null)
                        {
                            <div class="text-center mb-4">
                                <div class="bg-primary bg-opacity-10 rounded-circle d-inline-flex align-items-center justify-content-center" 
                                     style="width: 80px; height: 80px;">
                                    <i class="bi bi-person-fill text-primary" style="font-size: 2.5rem;"></i>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-bold">Benutzername</label>
                                <div class="p-3 bg-light rounded border">
                                    <i class="bi bi-person me-2 text-primary"></i>
                                    <strong>@AuthService.CurrentUser.UserName</strong>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label text-muted small text-uppercase fw-bold">E-Mail</label>
                                <div class="p-3 bg-light rounded border">
                                    <i class="bi bi-envelope me-2 text-primary"></i>
                                    <strong>@AuthService.CurrentUser.Email</strong>
                                </div>
                            </div>
                            <div class="mb-0">
                                <label class="form-label text-muted small text-uppercase fw-bold">Rolle</label>
                                <div class="p-3 bg-light rounded border">
                                    <i class="bi bi-shield-check me-2 text-primary"></i>
                                    <span class="badge bg-primary">@AuthService.CurrentUser.Role</span>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="modal-footer border-0 bg-light">
                        <button type="button" class="btn btn-secondary" @onclick="CloseProfilePopup">
                            <i class="bi bi-x-circle me-1"></i>Schließen
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
}

