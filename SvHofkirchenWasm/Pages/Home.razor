                                <i class="bi bi-person-circle fs-4 me-3 text-primary"></i>
                                <div>
                                    <div class="fw-bold">Mein Profil</div>
                                    <small class="text-muted">Mein Profil ansehen</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </button>

                            <a href="youth-list"
                                class="list-group-item list-group-item-action p-3 border-bottom-0 d-flex align-items-center">
                                <i class="bi bi-person-badge fs-4 me-3 text-primary"></i>
                                <div>
                                    <div class="fw-bold">Spielerliste</div>
                                    <small class="text-muted">Daten ansehen @(AuthService.CurrentRole == "Admin" ? "& bearbeiten" : "")</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </a>
                            
