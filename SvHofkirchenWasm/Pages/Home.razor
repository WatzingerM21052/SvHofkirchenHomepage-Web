                            {
                                <a href="settings"
                                    class="list-group-item list-group-item-action p-3 border-bottom-0 d-flex align-items-center">
                                    <i class="bi bi-gear-fill fs-4 me-3 text-secondary"></i>
                                    <div>
                                        <div class="fw-bold">Einstellungen</div>
                                        <small class="text-muted">App konfigurieren</small>
                                    </div>
                                    <i class="bi bi-chevron-right ms-auto text-muted"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
