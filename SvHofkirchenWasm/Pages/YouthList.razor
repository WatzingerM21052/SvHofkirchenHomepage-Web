@page "/youth-list"
@using SvHofkirchenWasm.Models
@inject YouthService Service

<div class="container-fluid p-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-primary mb-0">Kaderverwaltung</h2>
            <p class="text-muted small mb-0">Alle Spieler im Überblick</p>
        </div>
        <button class="btn btn-primary rounded-pill px-4 shadow-sm" @onclick="() => OpenEditor(null)">
            <i class="bi bi-plus-lg me-2"></i>Spieler anlegen
        </button>
    </div>

    @if (Service.IsInitialized)
    {
        <div class="glass-card p-3 mb-4">
             <div class="input-group">
                  <span class="input-group-text bg-white border-end-0"><i class="bi bi-search text-muted"></i></span>
                  <input type="text" class="form-control border-start-0 shadow-none ps-0" placeholder="Suche nach Namen..." 
                         @bind="SearchTerm" @bind:event="oninput" />
             </div>
        </div>

        <div class="glass-card overflow-hidden">
             <div class="table-responsive">
                 <table class="table table-hover align-middle mb-0">
                     <thead class="bg-light">
                         <tr>
                             <th class="ps-4">Name</th>
                             <th>Geburtsdatum</th>
                             <th>Kategorie</th>
                             <th class="text-end pe-4">Optionen</th>
                         </tr>
                     </thead>
                     <tbody>
                         @foreach (var member in GetFilteredMembers())
                         {
                             <tr>
                                 <td class="ps-4">
                                     <span class="fw-bold text-dark">@member.LastName</span> @member.FirstName
                                 </td>
                                 <td class="text-muted font-monospace">@(member.BirthDate?.ToString("dd.MM.yyyy") ?? "-")</td>
                                 <td><span class="badge rounded-pill @member.CategoryColor">@member.AgeCategory</span></td>
                                 <td class="text-end pe-4">
                                     <button class="btn btn-icon btn-sm rounded-circle me-1" @onclick="() => OpenEditor(member)" title="Bearbeiten">
                                         <i class="bi bi-pencil-fill text-primary"></i>
                                     </button>
                                     <button class="btn btn-icon btn-sm rounded-circle" @onclick="() => RequestDelete(member)" title="Löschen">
                                         <i class="bi bi-trash-fill text-danger"></i>
                                     </button>
                                 </td>
                             </tr>
                         }
                     </tbody>
                 </table>
             </div>
        </div>
    }
</div>

@if (ShowEditor)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="modal-header bg-light border-0 pb-0">
                    <h5 class="modal-title fw-bold text-primary">
                        @(EditModel.MemberId == 0 ? "Neuen Spieler anlegen" : "Spieler bearbeiten")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseEditor"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="form-floating mb-3">
                        <input id="lastName" class="form-control" placeholder="Nachname" @bind="EditModel.LastName" />
                        <label for="lastName">Nachname</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input id="firstName" class="form-control" placeholder="Vorname" @bind="EditModel.FirstName" />
                        <label for="firstName">Vorname</label>
                    </div>
                    
                    <div class="form-group">
                        <label class="small text-muted fw-bold ms-1 mb-1">Geburtsdatum</label>
                        <input type="date" class="form-control fw-bold" 
                               value="@(TempDate?.ToString("yyyy-MM-dd"))" 
                               @onchange="OnDateChanged" />
                        @if(TempDate.HasValue)
                        {
                            <div class="small text-end text-muted mt-1">
                                Berechnetes Alter: <span class="fw-bold">@CalculateAge(TempDate.Value) Jahre</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer border-top-0 bg-light">
                    <button class="btn btn-outline-secondary rounded-pill px-4" @onclick="CloseEditor">Abbrechen</button>
                    <button class="btn btn-primary rounded-pill px-4 fw-bold" @onclick="SaveMember">Speichern</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ShowDeleteConfirm)
{
    <div class="modal-backdrop fade show"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content border-0 shadow-lg rounded-4 text-center">
                <div class="modal-body p-4">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex p-3 mb-3">
                        <i class="bi bi-exclamation-lg fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Löschen?</h5>
                    <p class="text-muted small">Dies kann nicht rückgängig gemacht werden.</p>
                    <div class="d-flex justify-content-center gap-2 mt-4">
                        <button class="btn btn-light rounded-pill px-3" @onclick="() => ShowDeleteConfirm = false">Zurück</button>
                        <button class="btn btn-danger rounded-pill px-3" @onclick="ConfirmDelete">Ja, löschen</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    // ... Variablen für Search/Sort wie vorher ...
    private string SearchTerm = "";
    private string SortOption = "name_asc";
    
    private bool ShowEditor = false;
    private MemberDto EditModel = new();
    
    // Temporäres DateTime für das Input-Feld
    private DateTime? TempDate; 

    private bool ShowDeleteConfirm = false;
    private MemberDto? MemberToDelete;

    protected override async Task OnInitializedAsync()
    {
        Service.OnChange += StateHasChanged;
        await Service.InitializeAsync();
    }
    public void Dispose() => Service.OnChange -= StateHasChanged;

    // Filter Logik
    private IEnumerable<MemberDto> GetFilteredMembers()
    {
        var query = Service.YouthMembers.AsEnumerable();
        if (!string.IsNullOrWhiteSpace(SearchTerm))
            query = query.Where(m => m.FullName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));
            
        return query.OrderBy(m => m.LastName).ThenBy(m => m.FirstName);
    }

    private void OpenEditor(MemberDto? member)
    {
        if (member == null)
        {
            // Neu
            EditModel = new MemberDto();
            TempDate = new DateTime(2015, 1, 1); // Standardwert
        }
        else
        {
            // Edit
            EditModel = new MemberDto 
            { 
                MemberId = member.MemberId, 
                FirstName = member.FirstName, 
                LastName = member.LastName, 
                BirthDateString = member.BirthDateString 
            };
            
            // Konvertieren String "dd.MM.yyyy" -> DateTime für den Picker
            if (member.BirthDate.HasValue)
            {
                TempDate = member.BirthDate.Value;
            }
            else
            {
                TempDate = null;
            }
        }
        ShowEditor = true;
    }

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date))
        {
            TempDate = date;
        }
    }

    private int CalculateAge(DateTime date)
    {
        var today = DateTime.Today;
        var age = today.Year - date.Year;
        if (date.Date > today.AddYears(-age)) age--;
        return age;
    }

    private async Task SaveMember()
    {
        if (string.IsNullOrWhiteSpace(EditModel.LastName)) return;

        // Zurück konvertieren: DateTime -> String "dd.MM.yyyy"
        if (TempDate.HasValue)
        {
            EditModel.BirthDateString = TempDate.Value.ToString("dd.MM.yyyy");
        }
        else
        {
            EditModel.BirthDateString = "";
        }

        if (EditModel.MemberId == 0) await Service.AddMemberAsync(EditModel);
        else await Service.UpdateMemberAsync(EditModel);
        
        CloseEditor();
    }

    private void CloseEditor() => ShowEditor = false;
    
    private void RequestDelete(MemberDto member) { MemberToDelete = member; ShowDeleteConfirm = true; }
    private async Task ConfirmDelete() { if(MemberToDelete!=null) { await Service.DeleteMemberAsync(MemberToDelete.MemberId); ShowDeleteConfirm = false; } }
}