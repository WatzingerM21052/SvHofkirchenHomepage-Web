@page "/youth-list"
@using SvHofkirchenWasm.Models
@using SvHofkirchenWasm.Services
@inject YouthService Service
@inject AuthService AuthService
@inject NavigationManager Navigation

@if (!AuthService.IsAuthenticated)
{
    Navigation.NavigateTo("login");
    return;
}

@if (AuthService.CurrentRole != "Admin" && AuthService.CurrentRole != "Trainer")
{
    <div class="alert alert-danger" role="alert">
        <strong>Zugriff verweigert!</strong> Diese Seite ist nur für Administratoren und Trainer zugänglich.
    </div>
    return;
}

<div class="container-fluid p-4">
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4 gap-3">
        <div>
            <h2 class="fw-bold text-primary mb-0">Jugendverwaltung</h2>
            <p class="text-muted small mb-0">Alle Spieler im Überblick</p>
        </div>
        <button class="btn btn-primary rounded-pill px-4 shadow-sm fw-bold" @onclick="() => OpenEditor(null)">
            <i class="bi bi-plus-lg me-2"></i>Spieler anlegen
        </button>
    </div>

    @if (Service.IsInitialized)
    {
        <div class="glass-card p-3 mb-4">
            <div class="row g-2 align-items-center">
                <div class="col-md-8">
                    <div class="input-group bg-light rounded-3 border overflow-hidden">
                        <span class="input-group-text bg-transparent border-0 text-muted ps-3">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text" class="form-control border-0 bg-transparent shadow-none"
                            placeholder="Suche nach Namen..." @bind="SearchTerm" @bind:event="oninput" />
                    </div>
                </div>

                <div class="col-md-4 text-end position-relative">
                    <button
                        class="btn btn-white border w-100 d-flex justify-content-between align-items-center rounded-3 shadow-sm px-3 bg-white"
                        @onclick="ToggleFilter" style="height: 45px;">
                        <span class="fw-bold text-muted small">
                            <i class="bi bi-sort-down me-2 text-primary"></i>@GetSortLabel(SortOption)
                        </span>
                        <i
                            class="bi bi-chevron-down small text-muted transition-transform @(isFilterOpen ? "rotate-180" : "")"></i>
                    </button>

                    @if (isFilterOpen)
                    {
                        <div class="position-fixed top-0 start-0 w-100 h-100" style="z-index: 1000;" @onclick="ToggleFilter">
                        </div>

                        <ul class="dropdown-menu show border-0 shadow-lg rounded-3 w-100 mt-2 p-2 animate-slide-in"
                            style="z-index: 1001; backdrop-filter: blur(10px); background: rgba(255,255,255,0.95);">

                            <li>
                                <h6 class="dropdown-header text-uppercase small fw-bold text-muted" style="font-size: 0.7rem;">
                                    Sortierung</h6>
                            </li>

                            <li><button class="dropdown-item rounded-2 mb-1 @(SortOption == "name_asc" ? "active fw-bold" : "")"
                                    @onclick='() => SelectSort("name_asc")'>
                                    <i class="bi bi-sort-alpha-down me-2"></i>A-Z (Nachname)
                                </button></li>

                            <li><button
                                    class="dropdown-item rounded-2 mb-1 @(SortOption == "name_desc" ? "active fw-bold" : "")"
                                    @onclick='() => SelectSort("name_desc")'>
                                    <i class="bi bi-sort-alpha-down-alt me-2"></i>Z-A (Nachname)
                                </button></li>

                            <li>
                                <hr class="dropdown-divider my-2">
                            </li>

                            <li><button class="dropdown-item rounded-2 mb-1 @(SortOption == "age_asc" ? "active fw-bold" : "")"
                                    @onclick='() => SelectSort("age_asc")'>
                                    <i class="bi bi-sort-numeric-down me-2"></i>Jüngste zuerst
                                </button></li>

                            <li><button class="dropdown-item rounded-2 mb-1 @(SortOption == "age_desc" ? "active fw-bold" : "")"
                                    @onclick='() => SelectSort("age_desc")'>
                                    <i class="bi bi-sort-numeric-down-alt me-2"></i>Älteste zuerst
                                </button></li>
                        </ul>
                    }
                </div>
            </div>
        </div>

        <div class="glass-card overflow-hidden">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light border-bottom">
                        <tr>
                            <th class="ps-4 text-uppercase text-muted small py-3">Name</th>
                            <th class="text-uppercase text-muted small">Geburtsdatum</th>
                            <th class="text-uppercase text-muted small">Kategorie</th>
                            <th class="text-end pe-4 text-uppercase text-muted small">Aktionen</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var member in GetFilteredMembers())
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="fw-bold text-dark">@member.LastName</div>
                                    <div class="small text-muted">@member.FirstName</div>
                                </td>
                                <td class="text-muted font-monospace">
                                    @(member.BirthDate?.ToString("dd.MM.yyyy") ?? "-")
                                </td>
                                <td>
                                    <span class="badge rounded-pill @member.CategoryColor border shadow-sm text-white">
                                        @member.AgeCategory
                                    </span>
                                </td>
                                <td class="text-end pe-4">
                                    <button class="btn btn-light btn-sm rounded-circle shadow-sm border me-1"
                                        @onclick="() => OpenEditor(member)" title="Bearbeiten">
                                        <i class="bi bi-pencil-fill text-primary"></i>
                                    </button>
                                    <button class="btn btn-light btn-sm rounded-circle shadow-sm border"
                                        @onclick="() => RequestDelete(member)" title="Löschen">
                                        <i class="bi bi-trash-fill text-danger"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                        @if (!GetFilteredMembers().Any())
                        {
                            <tr>
                                <td colspan="4" class="text-center py-4 text-muted">Keine Spieler gefunden.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

<style>
    .rotate-180 {
        transform: rotate(180deg);
    }

    .transition-transform {
        transition: transform 0.2s ease;
    }

    .animate-slide-in {
        animation: slideDown 0.2s ease-out forwards;
        transform-origin: top center;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px) scale(0.98);
        }

        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }
</style>

@if (ShowEditor)
{
    <div class="modal-backdrop fade show" style="backdrop-filter: blur(4px);"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="modal-header bg-light border-0 pb-0">
                    <h5 class="modal-title fw-bold text-primary">
                        @(EditModel.MemberId == 0 ? "Neuen Spieler anlegen" : "Spieler bearbeiten")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseEditor"></button>
                </div>
                <div class="modal-body p-4">
                    <div class="form-floating mb-3">
                        <input id="lastName" class="form-control rounded-3" placeholder="Nachname"
                            @bind="EditModel.LastName" />
                        <label for="lastName">Nachname</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input id="firstName" class="form-control rounded-3" placeholder="Vorname"
                            @bind="EditModel.FirstName" />
                        <label for="firstName">Vorname</label>
                    </div>
                    <div class="form-group">
                        <label class="small text-muted fw-bold ms-1 mb-1">Geburtsdatum</label>
                        <input type="date" class="form-control rounded-3 fw-bold"
                            value="@(TempDate?.ToString("yyyy-MM-dd"))" @onchange="OnDateChanged" />
                        @if (TempDate.HasValue)
                        {
                            <div class="small text-end text-muted mt-1">
                                Berechnetes Alter: <span class="fw-bold text-primary">@CalculateAge(TempDate.Value) Jahre</span>
                            </div>
                        }
                    </div>
                </div>
                <div class="modal-footer border-top-0 bg-light">
                    <button class="btn btn-outline-secondary rounded-pill px-4" @onclick="CloseEditor">Abbrechen</button>
                    <button class="btn btn-primary rounded-pill px-4 fw-bold" @onclick="SaveMember">Speichern</button>
                </div>
            </div>
        </div>
    </div>
}

@if (ShowDeleteConfirm)
{
    <div class="modal-backdrop fade show" style="backdrop-filter: blur(4px);"></div>
    <div class="modal fade show d-block" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-sm">
            <div class="modal-content border-0 shadow-lg rounded-4 text-center">
                <div class="modal-body p-4">
                    <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex p-3 mb-3">
                        <i class="bi bi-exclamation-lg fs-1"></i>
                    </div>
                    <h5 class="fw-bold">Löschen?</h5>
                    <p class="text-muted small mb-4">Möchtest du <strong>@MemberToDelete?.FullName</strong> wirklich
                        unwiderruflich löschen?</p>
                    <div class="d-flex justify-content-center gap-2">
                        <button class="btn btn-light rounded-pill px-3"
                            @onclick="() => ShowDeleteConfirm = false">Abbrechen</button>
                        <button class="btn btn-danger rounded-pill px-3 fw-bold" @onclick="ConfirmDelete">Löschen</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private string SearchTerm = "";
    private string SortOption = "name_asc";

    private bool isFilterOpen = false;
    private void ToggleFilter() => isFilterOpen = !isFilterOpen;
    private void SelectSort(string option)
    {
        SortOption = option;
        isFilterOpen = false;
    }

    private bool ShowEditor = false;
    private MemberDto EditModel = new();
    private DateTime? TempDate;

    private bool ShowDeleteConfirm = false;
    private MemberDto? MemberToDelete;

    protected override async Task OnInitializedAsync()
    {
        Service.OnChange += StateHasChanged;
        await Service.InitializeAsync();
    }
    public void Dispose() => Service.OnChange -= StateHasChanged;

    private IEnumerable<MemberDto> GetFilteredMembers()
    {
        var query = Service.YouthMembers.AsEnumerable();

        if (!string.IsNullOrWhiteSpace(SearchTerm))
            query = query.Where(m => m.FullName.Contains(SearchTerm, StringComparison.OrdinalIgnoreCase));

        query = SortOption switch
        {
            "name_desc" => query.OrderByDescending(m => m.LastName).ThenByDescending(m => m.FirstName),
            "age_asc" => query.OrderByDescending(m => m.BirthDate),
            "age_desc" => query.OrderBy(m => m.BirthDate),
            _ => query.OrderBy(m => m.LastName).ThenBy(m => m.FirstName)
        };

        return query;
    }

    private string GetSortLabel(string option) => option switch
    {
        "name_desc" => "Z-A (Nachname)",
        "age_asc" => "Jüngste zuerst",
        "age_desc" => "Älteste zuerst",
        _ => "A-Z (Nachname)"
    };

    private void OpenEditor(MemberDto? member)
    {
        if (member == null)
        {
            EditModel = new MemberDto();
            TempDate = new DateTime(2015, 1, 1);
        }
        else
        {
            EditModel = new MemberDto
            {
                MemberId = member.MemberId,
                FirstName = member.FirstName,
                LastName = member.LastName,
                BirthDateString = member.BirthDateString
            };
            if (member.BirthDate.HasValue) TempDate = member.BirthDate.Value;
            else TempDate = null;
        }
        ShowEditor = true;
    }

    private void OnDateChanged(ChangeEventArgs e)
    {
        if (DateTime.TryParse(e.Value?.ToString(), out var date)) TempDate = date;
    }

    private int CalculateAge(DateTime date)
    {
        var today = DateTime.Today;
        var age = today.Year - date.Year;
        if (date.Date > today.AddYears(-age)) age--;
        return age;
    }

    private async Task SaveMember()
    {
        if (string.IsNullOrWhiteSpace(EditModel.LastName)) return;
        EditModel.BirthDateString = TempDate.HasValue ? TempDate.Value.ToString("dd.MM.yyyy") : "";
        if (EditModel.MemberId == 0) await Service.AddMemberAsync(EditModel);
        else await Service.UpdateMemberAsync(EditModel);
        CloseEditor();
    }

    private void CloseEditor() => ShowEditor = false;
    private void RequestDelete(MemberDto member) { MemberToDelete = member; ShowDeleteConfirm = true; }
    private async Task ConfirmDelete()
    {
        if (MemberToDelete != null)
        {
            await
            Service.DeleteMemberAsync(MemberToDelete.MemberId); ShowDeleteConfirm = false;
        }
    }
}