@page "/admin/users"
@using SvHofkirchenWasm.Services
@using SvHofkirchenWasm.Models
@inject AuthService AuthService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

@if (AuthService.CurrentRole != "Admin")
{
    <div class="alert alert-danger" role="alert">
        <strong>Zugriff verweigert!</strong> Diese Seite ist nur für Administratoren zugänglich.
    </div>
    return;
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2>
                <i class="bi bi-shield-lock me-2"></i>Benutzerverwaltung
            </h2>
        </div>
        <div class="col text-end">
            <button class="btn btn-primary" @onclick="ShowCreateUserModal">
                <i class="bi bi-plus-circle me-2"></i>Neuer Benutzer
            </button>
        </div>
    </div>

    @if (isLoading)
    {
        <div class="d-flex justify-content-center p-4">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (UserList.Count == 0)
    {
        <div class="alert alert-info" role="alert">
            Noch keine Benutzer erstellt.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Benutzername</th>
                        <th>Email</th>
                        <th>Rolle</th>
                        <th>Status</th>
                        <th>Erstellt am</th>
                        <th>Aktionen</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in UserList)
                    {
                        <tr>
                            <td><strong>@user.UserName</strong></td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge" style="@GetRoleBadgeStyle(user.Role)">
                                    @user.Role
                                </span>
                            </td>
                            <td>
                                @if (user.IsActive)
                                {
                                    <span class="badge bg-success">Aktiv</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inaktiv</span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <button class="btn btn-sm btn-warning" @onclick="@(() => EditUser(user))">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                
                                @* Selbstschutz: Sich selbst kann man nicht löschen *@
                                @if (user.UserId != AuthService.CurrentUser?.UserId)
                                {
                                    <button class="btn btn-sm btn-danger" @onclick="@(() => DeleteUser(user.UserId))">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@if (ShowModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(EditingUser?.UserId == 0 ? "Neuer Benutzer" : "Benutzer bearbeiten")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <form @onsubmit:preventDefault>
                        <div class="mb-3">
                            <label for="userName" class="form-label">Benutzername</label>
                            <input type="text" class="form-control" id="userName" @bind="EditingUser!.UserName" placeholder="Name (Case Sensitive)" />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email <span class="text-muted fw-normal">(optional)</span></label>
                            <input type="email" class="form-control" id="email" @bind="EditingUser!.Email" />
                        </div>
                        <div class="mb-3">
                            <label for="role" class="form-label">Rolle</label>
                            <select class="form-select" id="role" @bind="EditingUser!.Role">
                                <option value="Admin">Admin</option>
                                <option value="Trainer">Trainer</option>
                                <option value="Mitglied">Mitglied</option>
                            </select>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="isActive" @bind="EditingUser!.IsActive" />
                            <label class="form-check-label" for="isActive">
                                Aktiv
                            </label>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Ein inaktiver Benutzer kann sich nicht anmelden. Verwenden Sie dies, um Benutzer temporär zu sperren.
                            </div>
                        </div>

                        @if (EditingUser.UserId == 0)
                        {
                            @if (string.IsNullOrEmpty(CurrentPassword))
                            {
                                <div class="alert alert-info small">
                                    <i class="bi bi-key-fill me-2"></i>
                                    <strong>Passwort:</strong> Das initiale Passwort wird automatisch beim Speichern generiert und hier angezeigt.
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-success">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <strong><i class="bi bi-check-circle-fill me-2"></i>Benutzer erstellt!</strong>
                                    </div>
                                    <div class="mb-2">
                                        <strong>Generiertes Passwort:</strong>
                                    </div>
                                    <div class="input-group">
                                        <input type="text" class="form-control font-monospace fw-bold" value="@CurrentPassword" readonly />
                                        <button class="btn btn-outline-secondary" type="button" @onclick="() => CopyToClipboard(CurrentPassword)">
                                            <i class="bi bi-clipboard"></i> Kopieren
                                        </button>
                                    </div>
                                    <small class="text-muted mt-2 d-block">
                                        <i class="bi bi-exclamation-triangle me-1"></i>
                                        Bitte speichern Sie dieses Passwort jetzt! Es bleibt auch nach dem Schließen beim erneuten Öffnen dieses Benutzers sichtbar.
                                    </small>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-warning small mb-3">
                                <i class="bi bi-info-circle-fill me-2"></i>
                                <strong>Hinweis:</strong> Benutzer können ihr Passwort nicht selbst ändern. Nur Administratoren können neue Passwörter generieren oder manuell festlegen.
                            </div>
                            
                            <div class="mb-3">
                                <label class="form-label fw-bold">Passwort-Verwaltung</label>
                                
                                @* Aktuelles Passwort immer anzeigen wenn vorhanden *@
                                @if (!string.IsNullOrEmpty(CurrentPassword))
                                {
                                    <div class="mb-3">
                                        <label class="form-label small text-muted">Aktuelles Passwort:</label>
                                        <div class="input-group">
                                            <input type="text" class="form-control font-monospace" value="@CurrentPassword" readonly />
                                            <button class="btn btn-outline-secondary" type="button" @onclick="() => CopyToClipboard(CurrentPassword)">
                                                <i class="bi bi-clipboard"></i> Kopieren
                                            </button>
                                        </div>
                                    </div>
                                }
                                
                                @* Buttons zum Ändern *@
                                <div class="btn-group w-100 mb-3" role="group">
                                    <button type="button" class="btn btn-outline-primary" @onclick="GenerateNewPasswordForUser">
                                        <i class="bi bi-arrow-repeat me-2"></i>Neues Passwort generieren
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary" @onclick="() => ShowManualPassword = !ShowManualPassword">
                                        <i class="bi bi-pencil-square me-2"></i>Manuell festlegen
                                    </button>
                                </div>
                                
                                @if (ShowManualPassword)
                                {
                                    <div class="mb-3">
                                        <label for="manualPassword" class="form-label small">Benutzerdefiniertes Passwort</label>
                                        <input type="text" class="form-control font-monospace" id="manualPassword" 
                                               @bind="ManualPassword" placeholder="Mindestens 8 Zeichen" />
                                        <small class="form-text text-muted">
                                            <i class="bi bi-shield-check me-1"></i>
                                            Empfohlen: Mindestens 8 Zeichen mit Groß-/Kleinbuchstaben, Zahlen und Sonderzeichen
                                        </small>
                                        <div class="mt-2">
                                            <button type="button" class="btn btn-sm btn-primary" @onclick="ApplyManualPassword">
                                                <i class="bi bi-check2 me-1"></i>Passwort übernehmen
                                            </button>
                                            <button type="button" class="btn btn-sm btn-secondary" @onclick="() => { ManualPassword = null; ShowManualPassword = false; }">
                                                Abbrechen
                                            </button>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Abbrechen</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveUser">Speichern</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<User> UserList = new();
    private bool ShowModal = false;
    private bool isLoading = true;
    
    private User EditingUser = new();
    private string? CurrentPassword = null; // Aktuelles Passwort für den bearbeiteten Benutzer
    private string? ManualPassword = null;
    private bool ShowManualPassword = false;
    private bool IsNewlyCreated = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadUsers();
    }

    private async Task LoadUsers()
    {
        isLoading = true;
        UserList = await AuthService.GetUsersAsync();
        isLoading = false;
    }

    private void ShowCreateUserModal()
    {
        EditingUser = new User { UserId = 0, CreatedAt = DateTime.Now, Role = "User", IsActive = true };
        CurrentPassword = null;
        ManualPassword = null;
        ShowManualPassword = false;
        IsNewlyCreated = false;
        
        // Generiere direkt eins, damit es da ist, wenn gespeichert wird
        GenerateNewPasswordForUser();
        
        ShowModal = true;
    }

    private void EditUser(User user)
    {
        EditingUser = new User
        {
            UserId = user.UserId,
            UserName = user.UserName,
            Email = user.Email,
            Role = user.Role,
            IsActive = user.IsActive,
            CreatedAt = user.CreatedAt,
            LastLogin = user.LastLogin,
            Password = user.Password // Vorhandenes Passwort mitnehmen!
        };
        
        // Das Passwort aus dem Model laden (dank Worker Update jetzt verfügbar)
        CurrentPassword = user.Password; 
        
        ManualPassword = null;
        ShowManualPassword = false;
        IsNewlyCreated = false;
        ShowModal = true;
    }

    private async Task SaveUser()
    {
        // 1. Manuelles Passwort hat Vorrang (falls was drin steht)
        if (ShowManualPassword && !string.IsNullOrWhiteSpace(ManualPassword))
        {
            EditingUser.Password = ManualPassword;
        }
        // 2. Sonst das generierte/angezeigte nehmen
        else if (!string.IsNullOrEmpty(CurrentPassword))
        {
            EditingUser.Password = CurrentPassword;
        }
        
        // Validierung
        if (string.IsNullOrWhiteSpace(EditingUser.UserName)) return;
        if (string.IsNullOrWhiteSpace(EditingUser.Password)) return; // Passwort Pflicht

        if (EditingUser.UserId == 0)
        {
            IsNewlyCreated = true;
            await AuthService.AddUserAsync(EditingUser);
        }
        else
        {
            await AuthService.UpdateUserAsync(EditingUser);
            CloseModal(); // Bei Update direkt schließen
        }
        
        // Bei neuem User lassen wir das Modal offen, damit man das Passwort kopieren kann,
        // aber wir laden die Liste im Hintergrund neu
        if (IsNewlyCreated == false) 
        {
             await LoadUsers();
        }
        else 
        {
            // Wenn neu erstellt, Liste laden aber Modal offen lassen
             UserList = await AuthService.GetUsersAsync();
        }
    }

    private async Task DeleteUser(int userId)
    {
        // Selbstschutz ja, aber andere Admins dürfen gelöscht werden
        if (userId == AuthService.CurrentUser?.UserId) return;

        await AuthService.DeleteUserAsync(userId);
        await LoadUsers();
    }

    private void CloseModal()
    {
        ShowModal = false;
        EditingUser = new();
        ManualPassword = null;
        ShowManualPassword = false;
        IsNewlyCreated = false;
    }

    private string GetRoleBadgeStyle(string role) => role switch
    {
        "Admin" => "background-color: #dc3545;",
        "Trainer" => "background-color: #0d6efd;",
        "Mitglied" => "background-color: #198754;",
        "Besucher" => "background-color: #6c757d;",
        _ => "background-color: #6c757d;"
    };

    private string GeneratePassword()
    {
        const string chars = "ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz23456789";
        const string special = "!@#$%&*";
        var random = new Random();
        
        var password = new char[12];
        for (int i = 0; i < 10; i++)
        {
            password[i] = chars[random.Next(chars.Length)];
        }
        for (int i = 10; i < 12; i++)
        {
            password[i] = special[random.Next(special.Length)];
        }
        
        // Mischen
        return new string(password.OrderBy(x => random.Next()).ToArray());
    }

    private void GenerateNewPasswordForUser()
    {
        CurrentPassword = GeneratePassword();
        ManualPassword = null;
        ShowManualPassword = false;
    }
    
    private void ApplyManualPassword()
    {
        if (!string.IsNullOrEmpty(ManualPassword))
        {
            CurrentPassword = ManualPassword;
            ManualPassword = null;
            ShowManualPassword = false;
        }
    }

    private async Task CopyToClipboard(string text)
    {
        if (!string.IsNullOrEmpty(text))
        {
            await JSRuntime.InvokeVoidAsync("navigator.clipboard.writeText", text);
        }
    }
}