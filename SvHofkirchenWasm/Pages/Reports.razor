@page "/reports"
@inject DataService DataService

<h1>Berichte & News</h1>

@if (DataService.IsInitialized)
{
    <div class="list-group">
        @foreach (var report in DataService.Data.Reports.OrderByDescending(r => r.Date))
        {
            <div class="list-group-item list-group-item-action flex-column align-items-start mb-3 border rounded shadow-sm">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@report.Title</h5>
                    <small>@report.Date.ToShortDateString()</small>
                </div>
                @if(!string.IsNullOrEmpty(report.ImageUrl))
                {
                    <img src="@report.ImageUrl" style="max-height: 200px; width: auto; margin: 10px 0;" class="rounded" />
                }
                <p class="mb-1">@((MarkupString)report.Content)</p> </div>
        }
    </div>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await DataService.InitializeAsync();
    }
}